<h1> Movies homepage</h1>

<% @lists.each do |movie| %>
    <div>
      <img src=<%= movie.poster_url %> alt="movie poster">
      <p>
        <strong>Title:</strong>
        <%= movie.title %>
      </p>

      <p>
        <strong>Overview:</strong>
        <%= movie.overview %>
      </p>

      <p>
        <strong>Rating:</strong>
        <%= movie.rating %>
      </p>
      <%= link_to "Movie details", movie_path(movie) %>
    </div>
  <% end %>
